<Window x:Class="ADBTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADBTools"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        mc:Ignorable="d"
        ui:ThemeManager.IsThemeAware="True"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:WindowHelper.SystemBackdropType="Acrylic11"
        ui:WindowHelper.CornerStyle="Round"
        ui:TitleBar.IsBackButtonVisible="False"
        ui:TitleBar.ButtonGlyphStyle="Fluent"
        ui:TitleBar.Height="48"
        ui:TitleBar.ExtendViewIntoTitleBar="True"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        Deactivated="Window_Deactivated"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainContent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid x:Name="AppTitleBar"  
      Height="48" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaddingColumn" Width="0"/>
                <ColumnDefinition/>
                <ColumnDefinition x:Name="RightPaddingColumn" Width="0"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="TitleBarTextBlock" 
               FontWeight="Regular"
               FontSize="12"
               Grid.Column="1" 
               Grid.Row="0"
               VerticalAlignment="Center"
               Margin="16,0,0,0"
               >
                ADB Tools
            </TextBlock>
            <TextBlock x:Name="TitleBarTextBlock2" 
               FontWeight="Regular"
               FontSize="12"
               Grid.Column="2" 
               VerticalAlignment="Center"
               Margin="16,0,0,0"
               >
                ADB Tools
            </TextBlock>
        </Grid>

    </Grid>
</Window>
